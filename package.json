{
  "name": "jolharg",
  "version": "1.0.0",
  "description": "JolHarg Web Site",
  "main": "js/index.js",
  "scripts": {
    "build": "npm run build:static && npm run build:render && npm run build:css",
    "build:css": "mkdir -p .site/css external && npm run get-external-font && uncss -H .site -C . -s external/caudex.css,node_modules/bootstrap/dist/css/bootstrap.min.css,node_modules/@jolharg/website-theme/css/style.css,css/style.css < .site/index.html > .site/css/style.css",
    "build:render": "node -r esm lib/prepare-templates.js | node_modules/.bin/pug -O /dev/stdin templates/index.pug -o .site",
    "build:static": "mkdir -p .site && cp -r static/* .site/",
    "deploy": "npm run build && gh-pages -d .site",
    "get-external-font": "wget -4 -O external/caudex.css -c https://fonts.googleapis.com/css?family=Caudex",
    "start": "npm run build && serve .site",
    "test": "npm run test:lint && MOZ_HEADLESS=1 mocha -r core-js -r esm **/*.spec.js **/**/*.spec.js",
    "test:lint": "eslint --fix **/*.js",
    "test:record": "MOZ_HEADLESS=1 node -r core-js -r esm test/record.js",
    "snyk-protect": "snyk protect",
    "prepare": "npm run snyk-protect"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/JolHarg/jolharg.git"
  },
  "keywords": [
    "jolharg",
    "web",
    "site",
    "website"
  ],
  "author": "Dan Dart <npm@dandart.co.uk>",
  "license": "AGPL-3.0",
  "bugs": {
    "url": "https://github.com/JolHarg/jolharg/issues"
  },
  "homepage": "https://github.com/JolHarg/jolharg#readme",
  "devDependencies": {
    "chai": "^4.2.0",
    "core-js": "^3.0.1",
    "eslint": "^5.16.0",
    "esm": "^3.2.22",
    "geckodriver": "^1.16.2",
    "gh-pages": "^2.0.1",
    "jstransformer-markdown-it": "^2.1.0",
    "mocha": "^6.1.4",
    "pug": "^2.0.3",
    "pug-cli": "^1.0.0-alpha6",
    "selenium-webdriver": "^4.0.0-alpha.1",
    "uncss": "^0.16.2"
  },
  "dependencies": {
    "@jolharg/website-theme": "^0.0.5",
    "bootstrap": "^4.3.1",
    "serve": "^11.0.0",
    "snyk": "^1.230.5"
  },
  "snyk": true
}
