{
  "name": "jolharg",
  "version": "1.0.0",
  "description": "JolHarg Web Site",
  "main": "js/index.js",
  "scripts": {
    "build:static": "mkdir -p .site && cp -r static/* .site/",
    "build:css": "mkdir -p .site/css && uncss -H .site -C . -s https://fonts.googleapis.com/css?family=Caudex,node_modules/bootstrap/dist/css/bootstrap.min.css,node_modules/jolharg-theme/css/style.css,css/style.css < .site/index.html > .site/css/style.css",
    "build:render": "node --experimental-modules lib/prepare-templates.mjs | node_modules/.bin/pug -O /dev/stdin templates/index.pug -o .site",
    "build": "npm run build:static && npm run build:render && npm run build:css",
    "deploy": "npm run build && gh-pages -d .site",
    "start": "npm run build && serve .site"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/JolHarg/jolharg.git"
  },
  "keywords": [
    "jolharg",
    "web",
    "site",
    "website"
  ],
  "author": "Dan Dart <npm@dandart.co.uk>",
  "license": "AGPL-3.0",
  "bugs": {
    "url": "https://github.com/JolHarg/jolharg/issues"
  },
  "homepage": "https://github.com/JolHarg/jolharg#readme",
  "devDependencies": {
    "gh-pages": "^1.2.0",
    "jstransformer-markdown-it": "^2.1.0",
    "pug": "^2.0.3",
    "pug-cli": "^1.0.0-alpha6",
    "uncss": "^0.16.2"
  },
  "dependencies": {
    "bootstrap": "^4.1.2",
    "@jolharg/website-theme": "^0.0.1",
    "serve": "^9.2.0"
  }
}
